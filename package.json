{
  "name": "hacknical-api",
  "version": "0.0.1",
  "description": "core server for hacknical",
  "main": "index.js",
  "scripts": {
    "build-app": "babel app -d dist --copy-files",
    "start-dev": "bnr local:app:start",
    "deploy": "git checkout master && git pull origin master && npm i && npm run build-app && npm run pm2:restart",
    "pm2": "bnr pro:app:start",
    "pm2:restart": "NODE_ENV=production pm2 restart \"hacknical-api\"",
    "pm2:stop": "NODE_ENV=production pm2 stop \"hacknical-api\"",
    "pm2:logs": "NODE_ENV=production pm2 logs \"hacknical-api\""
  },
  "betterScripts": {
    "pro:app:start": {
      "command": "pm2 start dist/index.js -i 3 --name \"hacknical-api\" --max-memory-restart 300M --merge-logs --log-date-format=\"YYYY-MM-DD HH:mm Z\" --output=\"log/production.log\"",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "local:app:start": {
      "command": "./node_modules/.bin/nodemon app/index.js",
      "env": {
        "NODE_ENV": "localdev"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecmadao/hacknical-api.git"
  },
  "author": "ecmadao",
  "license": "Apache License",
  "bugs": {
    "url": "https://github.com/ecmadao/hacknical-api/issues"
  },
  "homepage": "https://github.com/ecmadao/hacknical-api#readme",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "better-npm-run": "0.0.13"
  },
  "dependencies": {
    "babel-core": "^6.14.0",
    "babel-plugin-transform-async-to-generator": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.14.0",
    "babel-runtime": "^6.11.6",
    "config": "^1.21.0",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.2.0",
    "koa-convert": "^1.2.0",
    "koa-json": "^1.1.3",
    "koa-logger": "^1.3.0",
    "koa-onerror": "^2.0.0",
    "koa-router": "^7.0.1",
    "kcors": "^1.3.2",
    "moment": "^2.17.0",
    "mongoose": "^4.7.2",
    "nodemon": "^1.10.2",
    "request": "^2.75.0"
  }
}
